# Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pragati
POSTGRES_USER=pragati_user
POSTGRES_PASSWORD=your_postgres_password

MONGODB_URI=mongodb://localhost:27017/pragati
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Slack API
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=pragati-data-bucket

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML/AI Configuration
ML_MODEL_PATH=/app/models
OPENAI_API_KEY=your-openai-api-key

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SLACK_CLIENT_ID=your-slack-client-id

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Development
DEBUG=true
LOG_LEVEL=INFO

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Scalekit Enterprise Auth
SCALEKIT_CLIENT_ID=your-scalekit-client-id
SCALEKIT_CLIENT_SECRET=your-scalekit-client-secret
SCALEKIT_BASE_URL=https://api.scalekit.com
SCALEKIT_DOMAIN=your-company-domain.com

# CodeRabbit AI Code Review
CODERABBIT_API_KEY=your-coderabbit-api-key

# Rocket Deployment
ROCKET_ENV=development
ROCKET_SECRET_KEY=your-rocket-secret-key

# Performance Monitoring (Maxim)
MAXIM_API_KEY=your-maxim-api-key
MAXIM_PROJECT_ID=pragati-performance-platform

# Lovable AI Development
LOVABLE_API_KEY=your-lovable-api-key
LOVABLE_PROJECT_ID=pragati-platform

# Windsurf IDE Integration
WINDSURF_API_KEY=your-windsurf-api-key
WINDSURF_WORKSPACE_ID=pragati-workspace
